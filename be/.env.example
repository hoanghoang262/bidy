# Environment Configuration
NODE_ENV=development

# Database Configuration (REQUIRED)
# For local MongoDB: mongodb://localhost:27017/bidy_auction
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database_name
MONGODB_URI=mongodb://localhost:27017/bidy_auction

# JWT Configuration (REQUIRED - minimum 32 characters for security)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters_for_security

# AWS S3 Configuration (Required for file uploads)
ACCESS_KEY_ID=your_aws_access_key_id
SECRET_ACCESS_KEY=your_aws_secret_access_key
BUCKET_NAME=your_s3_bucket_name

# Email Configuration (Required for email notifications)
MAIL_FROM=your_email@gmail.com
MAIL_PASSWORD=your_app_specific_password

# Admin Configuration
ID_ADMIN=admin_user_id_from_mongodb

# Pagination Configuration
PAGE_NUMBER=1
LIMIT_NUMBER=15
ADMIN_LIMIT_NUMBER=10

# Auction Configuration
PERCENT_AUTOBID=10

# Client URL Configuration
# Development: http://localhost:3000
# Production: https://yourdomain.com
CLIENT_URL=http://localhost:3000

# Server Configuration
PORT=8000
SERVER_URL=http://localhost:8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_TO_FILE=false
DEBUG=false