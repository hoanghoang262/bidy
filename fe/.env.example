# Frontend Environment Variables - Bidy Auction Platform
# Copy this file to .env and update the values according to your environment

# =============================================================================
# ESSENTIAL CONFIGURATION
# =============================================================================

# API Configuration (Required)
# The base URL for your backend API server
NEXT_PUBLIC_API_URL=http://localhost:8001

# WebSocket Configuration (Recommended)
# URL for real-time features like live bidding and chat
NEXT_PUBLIC_WS_URL=ws://localhost:8001

# Application URL (Recommended)
# Used for redirects, links, and social media sharing
NEXT_PUBLIC_APP_URL=http://localhost:3001

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# File Upload Configuration
# Maximum file size for image uploads (in bytes) - Default: 10MB
NEXT_PUBLIC_MAX_IMAGE_SIZE=10485760

# Supported image formats (comma-separated)
NEXT_PUBLIC_SUPPORTED_FORMATS=jpeg,jpg,png,webp

# Pagination Settings
# Default number of items per page
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=12

# Admin panel items per page
NEXT_PUBLIC_ADMIN_PAGE_SIZE=10

# Application Metadata
NEXT_PUBLIC_APP_NAME=Bidy
NEXT_PUBLIC_APP_DESCRIPTION=Vietnamese Online Auction Platform

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable major features
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# Development and debugging
NEXT_PUBLIC_SHOW_DEV_TOOLS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Environment mode
NODE_ENV=production

# For production deployment, update these URLs:
# NEXT_PUBLIC_API_URL=https://api.yourdomain.com
# NEXT_PUBLIC_WS_URL=wss://api.yourdomain.com
# NEXT_PUBLIC_APP_URL=https://yourdomain.com

# =============================================================================
# BUILD CONFIGURATION
# =============================================================================

# Set to true for standalone deployment (Docker, etc.)
BUILD_STANDALONE=false

# =============================================================================
# NOTES
# =============================================================================

# - All NEXT_PUBLIC_ variables are exposed to the browser
# - Update API URLs for production deployment
# - Use HTTPS URLs in production for security
# - File size limits are in bytes (10485760 = 10MB)
# - LOG_LEVEL options: ERROR, WARN, INFO, DEBUG